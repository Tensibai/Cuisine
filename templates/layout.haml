!!! 5
%html
  %head
    %title Cuisine !

    <!-- Le javascript -->

    %script{:src => url('/js/jquery-1.9.1.js')  }
    %script{:src => url('/js/jquery-migrate-1.2.1.js')  }

    %script{:src => url('/js/bootstrap.js')}

    %script{:src => url('/js/jquery.flot-0.8.2.js')}

    <!-- Le styles -->

    %link{:href => url('/css/bootstrap.css'), :rel => 'stylesheet'}
    %link{:href => url('/css/bootstrap-theme.css'), :rel => 'stylesheet'}

  %body

    %div{:class => 'navbar navbar-inverse'}
      %div{:class => 'fill'}
        %div{:class => 'col-md-8 col-md-offset-2'}
          %ul{:class => 'nav navbar-nav'}
            %li
              %a{:class => 'navbar-brand', :href => url('/')} Cuisine
            %li
              %a{:href => url('/')} Hot stuff
            %li
              %a{:href => url('/search')} Search
            %li{:class => 'dropdown', :id => 'menu_environment', 'data-dropdown'.to_sym => 'dropdown-toggle'}
              %a{:href => '#1', 'data-toggle'.to_sym => 'dropdown' , :class => 'dropdown-toggle' } Environment
              %ul{:class => 'dropdown-menu'}
                %li
                  %a{:href => url('/')} All
                - @environments.each do |environment, _|
                  %li
                    %a{:href => url("/environment/#{environment})"}
                      #{environment}
            %li
              %a{:href => url('/about')} About

    %div{:class => 'container'}
      %div{:class => 'content-main col-md-12'}
        = yield

    %footer
      %p{:align => 'center'}
        &copy; Nicolas Szalay /
        %a{:href => 'http://www.rottenbytes.info' }
          www.rottenbytes.info
      %p{:align => 'center'}
        extended by Tensibai /
        %a{:href => 'https://github.com/Tensibai/Cuisine' }
          Github repository
